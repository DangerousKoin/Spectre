<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Aclonica&family=Audiowide&family=Syncopate:wght@700&display=swap&icon?family=Material+Icons" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon.png">
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <title>SPECTRE</title>
  </head>
  <body>
    <header>
      <div id="header-container">
        <div class="spacer"></div>
          <div id="logo-container">
            <div id="logo-box">
              <div id="logo">
                <h1><a href="../">SPECTRE</a></h1>
                <h2><a href="../">Speaker Rentals</a></h2>
              </div>
            </div>
          </div>
        <div class="spacer-center"></div>
          <div id="signin-container">
            <div id="signin-box">
              <div id="signin-info">
                <% if (user) { %>
                  <% if (user.avatar) { %>
                <a href="/user" id="userBtn"><img src="<%= user.avatar %>" alt="avatar" class="box responsive-img" width="50"></a>
                    <% } else { %>
                <a href="/user" id="userBtn"><img src="/public/images/favicon.png" alt="avatar" class="box responsive-img" width="50"></a>
                  <% }; %>
                
                <% } else { %>
                  <form id="login" action="/auth/google" method="GET">
                    <label>Email</label>
                    <input type="email" name="email" size="10">
                    <br>
                    <input type="submit" value="GOOGLE LOGIN">
                    </form>
                    <form id="register" action="/register" method="GET">
                    <input type="submit" value="REGISTER">
                    </form>
                <% }; %>
              </div>
              <div id="signin-buttons">
                <% if (user) { %>
                  <% let total = 0 %>
                <a href="/user" id="userBtn"><small>Hi <%= user.first %>!</small></a>
                  <a href="/logout" id="logoutBtn">LOGOUT</a>
                  <br>
                  <% if (user.cart.length) { %>
                    <% user.cart.forEach(function(i) { %>
                        <% total += i.price %>
                      <% }); %>
                    <% }; %>
                      <% if (user.cart.length === 1) { %>
                      <small><%= user.cart.length %> Item</small>
                      <% } else { %>
                      <small><%= user.cart.length %> Items</small>
                      <% } %>
                      <a href="/cart" id="cartBtn">CART</a>
                        <br>
                      <medium>Total $<%= total %></medium>
                <% } %>
              </div>
            </div>
          </div>
        <div class="spacer"></div>
      </div>
    </header>
    <div id="main-container">
      <div id="main-box">
          <div id="main-content">