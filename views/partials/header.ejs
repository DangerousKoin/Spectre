<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Aclonica&family=Audiowide&family=Syncopate:wght@700&display=swap&icon?family=Material+Icons" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon.png">
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <title>SPECTRE</title>
  </head>
  <body>
    <header>
      <div id="header-container">
        <div class="spacer"></div>
          <div id="logo-container">
            <div id="logo-box">
              <div id="logo">
                <h1><a href="../">SPECTRE</a></h1>
                <h2><a href="../">Speaker Rentals</a></h2>
              </div>
            </div>
          </div>
        <div class="spacer-center"></div>
          <div id="signin-container">
            <div id="signin-box">
              <div id="signin-info">
                <% if (user) { %>
                  <% if (user.avatar) { %>
                  <a href="/user" id="userBtn"><img src="<%= user.avatar %>" alt="avatar" width="45"></a>
                  <% } else { %>
                  <a href="/user" id="userBtn"><img src="/images/icon.png" alt="avatar" width="50"></a>
                  <% }; %> 
                  <br>
                  <a href="/user" id="userBtn"><small>Hi <%= user.first %>!</small></a>
                <% } else { %>
                  <img src="/images/icon.png" alt="avatar" width="50">
                <% }; %>
              </div>
              <div id="signin-buttons">
                <% if (user) { %>
                  <a href="/user" id="cartBtn">PROFILE</a>
                  <br>
                  <% let total = 0 %>
                  <% if (user.cart.length) { %>
                    <% user.cart.forEach(function(ci) { %>
                      <% items.forEach(function(it) { %>
                        <% let ciString = String(ci._id); %>
                        <% let itString = String(it._id); %>
                          <% if (itString === ciString) { %>
                            <% total += it.price %>
                          <% }; %>
                      <% }); %>
                    <% }); %>
                  <% }; %>
                      <% if (user.cart.length === 1) { %>
                        <medium><%= user.cart.length %> Item</medium>
                      <% } else { %>
                        <medium><%= user.cart.length %> Items</medium>
                      <% }; %>
                        <a href="/cart" id="cartBtn">CART</a>
                        <br>
                      <% if (Number.isInteger(total)) { %>
                        <medium>Total $<%= total %>.00</medium>
                      <% } else { %>
                        <medium>Total $<%= total %></medium>
                      <% }; %>
                <% } else { %>
                
                    <br>
                    
                    <a id="button" href="/auth/google">
                      <svg width="12" height="12" viewBox="-2 -4 20 20"><path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 002.38-5.88c0-.57-.05-.66-.15-1.18z" fill="#4285F4"></path><path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 01-7.18-2.54H1.83v2.07A8 8 0 008.98 17z" fill="#34A853"></path><path d="M4.5 10.52a4.8 4.8 0 010-3.04V5.41H1.83a8 8 0 000 7.18l2.67-2.07z" fill="#FBBC05"></path><path d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 001.83 5.4L4.5 7.49a4.77 4.77 0 014.48-3.3z" fill="#EA4335"></path></svg>
                      Login</a>
                      <br>
                    <a id="button" href="/register">Register</a>
                <% }; %>
              </div>
            </div>
          </div>
        <div class="spacer"></div>
      </div>
    </header>
    <div id="main-container">
      <div id="main-box">
          <div id="main-content">