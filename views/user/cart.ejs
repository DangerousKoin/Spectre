<%- include('../partials/header') %>
<section id="show-page">
  
  <% if (user.cart.length > 0) { %>
    <table>
      <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Days</th>
            <th>Rented On</th>
        </tr>
      </thead>
      <tbody>
       
          <% let total = 0 %>
          <% user.cart.forEach(function(ci) { %>
            <% items.forEach(function(it) { %>
              <% let ciString = String(ci._id); %>
              <% let itString = String(it._id); %>
              <% if (itString === ciString) { %>
                <% total += it.price %>
              <% }; %>
              <tr>
                <td><%= it.name %></td>
                <td><%= it.price %></td>
                <td><%= ci.rentDays %></td>
                <td><%= ci.rentDate %></td>
                <% console.log(ci.id); %>

                <td>
                    <form action="/cart?_method=DELETE" method="POST">
                      <input type="hidden" name="cartItemId" value="<%= ci._id %>">
                      <input type="hidden" name="userCart" value="<%= user.cart %>">
                    <button type="submit">X</button></form>
                </td>
              </tr>
            <% }); %>
          <% }); %>
         

        <tr>
            <td>Total $<%= total %></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Items In Cart.</h5>
  <% }; %>
</section>
<%- include('../partials/footer') %>