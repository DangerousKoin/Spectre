<div id="search-container">
    <form action="/users" method="GET">
        <table id="name-table" class="highlight">
            <thead>
                <tr><th>
                    <input id="search" class="search-input" type="search" 
                    name="email" placeholder="search user <%= sortKey %>" 
                    value="<%= email %>" autocomplete="off">
                    <a href="/users?sort=<%= sortKey %>&email="><i class="material-icons">clear</i></a>
                </th></tr>
                <tr><th>
                    <label for="sort-name">
                    <a href="/users?sort=name&email=<%= email %>">
                    <input name="sort" type="radio" id="sort-name" value="name" class="with-gap"
                    <%= sortKey === 'name' ? 'checked' : '' %> >
                    <span>Name</span></a></label>
                    </th><th>
                    <label for="sort-email">
                    <a href="/users?sort=email&email=<%= email %>">
                    <input name="sort" type="radio" id="sort-email" value="email" class="with-gap"
                    <%= sortKey === 'email' ? 'checked' : '' %> >
                    <span>Email</span></a></label>
                </th></tr>
            </thead>
    </form>
            <tbody>
                <% users.forEach(function(user) { %>
                <tr><td>
                    <a href="/users?sort=<%= sortKey %>&email=<%= user.email %>">
                    <% if (user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="avatar" class="square responsive-img" width="25">
                    <% } else { %>
                        <i class="small material-icons">account_box</i>
                    <% } %>
                    <%= user.name %></a>
                </td><td>
                    <%= user.email %>
                </td></tr>
                    <% }) %>
            </tbody>   
        </table>
</div>
<br>